<form>
  <h2>Add A Review For This Game:</h2>
  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Username</h5>
      </div>
      <div class="col-xs-8">
        {{input class="new-game-field" value=username id="username"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Rating</h5>
      </div>
      <div class="col-xs-8">
        <div class="row">
          <span class="star-rating-selection" id="rateFiveStar" {{action "rateFiveStar"}}>
            {{starRating 5 id="rateFiveStar"}}
          </span>
        </div>

        <div class="row star-rating-selection">
          <span class="star-rating-selection" id="rateFourStar" {{action "rateFourStar"}}>
            {{starRating 4 id="rateFourStar"}}
          </span>
        </div>

        <div class="row star-rating-selection">
          <span class="star-rating-selection" id="rateThreeStar" {{action "rateThreeStar"}}>
            {{starRating 3 id="rateThreeStar"}}
          </span>
        </div>

        <div class="row star-rating-selection">
          <span class="star-rating-selection" id="rateTwoStar" {{action "rateTwoStar"}}>
            {{starRating 2 id="rateTwoStar"}}
          </span>
        </div>

        <div class="row star-rating-selection">
          <span class="star-rating-selection" id="rateOneStar" {{action "rateOneStar"}}>
            {{starRating 1 id="rateOneStar"}}
          </span>
        </div>

      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Comments</h5>
      </div>
      <div class="col-xs-8">
        {{textarea class="new-game-field" value=comment id="comment" class="materialize-textarea"}}
      </div>
    </div>
  </div>

  <button class="game-button btn" {{action 'saveReview'}}>Add Review</button>
</form>
