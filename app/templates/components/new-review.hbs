<form>
  <h2>Add A Review For This Game:</h2>
  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Username</h5>
      </div>
      <div class="col-xs-8">
        {{input class="new-game-field" value=username id="username"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Rating</h5>
      </div>
      <div class="col-xs-8">
        <div class="row">
          <span class="star-rating-selection" {{action "rateOneStar"}} id="rateOneStar">
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
          </span>
        </div>

        <div class="row">
          <span class="star-rating-selection" {{action "rateTwoStar"}} id="rateTwoStar">
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
          </span>
        </div>

        <div class="row">
          <span class="star-rating-selection" {{action "rateThreeStar"}} id="rateThreeStar">
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
          </span>
        </div>

        <div class="row">
          <span class="star-rating-selection" {{action "rateFourStar"}} id="rateFourStar">
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star-empty"></b>
          </span>
        </div>

        <div class="row">
          <span class="star-rating-selection" {{action "rateFiveStar"}} id="rateFiveStar">
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
            <b class="glyphicon glyphicon-star"></b>
          </span>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Comments</h5>
      </div>
      <div class="col-xs-8">
        {{textarea class="new-game-field" value=comment id="comment" class="materialize-textarea"}}
      </div>
    </div>
  </div>

  <button class="game-button btn" {{action 'saveReview'}}>Add Review</button>
</form>
