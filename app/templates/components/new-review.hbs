<form>
  <h2>Add A Review For This Game:</h2>
  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Username</h5>
      </div>
      <div class="col-xs-8">
        {{input class="new-game-field" value=username id="username"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Rating</h5>
      </div>
      <div class="col-xs-8">
        <div class="row">
          {{starRating 5}}
        </div>

        <div class="row">
          {{starRating 4}}
        </div>

        <div class="row">
          {{starRating 3}}
        </div>

        <div class="row">
          {{starRating 2}}
        </div>

        <div class="row">
          {{starRating 1}}
        </div>

      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-4">
        <h5>Comments</h5>
      </div>
      <div class="col-xs-8">
        {{textarea class="new-game-field" value=comment id="comment" class="materialize-textarea"}}
      </div>
    </div>
  </div>

  <button class="game-button btn" {{action 'saveReview'}}>Add Review</button>
</form>
