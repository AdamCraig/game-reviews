<h2>{{game.title}}</h2>
<br>
<div class="row">
  <div class="col-sm-5">
    <img class="detail-image" src="{{game.image}}">
  </div>

  <div class="col-sm-7 game-info">
    <h3>Genre: <span class="game-info">{{game.genre}}</span></h3>
    <h3>Developer: <span class="game-info">{{game.developer}}</span></h3>
    <br>
    <h4>Platform(s): <span class="game-info">{{game.platform}}</span></h4>
    <br>
    <h4>Average Score: {{averageScore}}</h4>
    <br>
    <button {{action 'addToFavorites' game}} class="btn add-to-favorites"><span class="glyphicon glyphicon-heart"></span> Add To Favorites</button>
  </div>
</div>

<div class="row">
  <h4 class="reviews-header">All Reviews For This Game</h4>
  {{#if game.reviews}}
    {{#each game.reviews as |review|}}
      {{review-tile review=review}}
    {{/each}}
  {{else}}
    <h4>There are no submitted reviews for this game. Be the first and add one below!</h4>
  {{/if}}
</div>

{{new-review saveReview="saveReview" game=game}}
