<form class="admin-form">
  <h2 class="add-an-game-title">Add A Game</h2>
  <div class="form-group">
    <div class="row">
      <div class="col-xs-2">
        <h2>Game Title</h2>
      </div>
      <div class="col-xs-10">
        {{input class="new-game-field" value=title}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-2">
        <h2>Developer</h2>
      </div>
      <div class="col-xs-10">
        {{input class="new-game-field" value=developer id="developer"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-2">
        <h2>Platform</h2>
      </div>
      <div class="col-xs-10">
        {{input class="new-game-field" value=platform id="platform"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-2">
        <h2>Genre</h2>
      </div>
      <div class="col-xs-10">
        {{input class="new-game-field" value=genre id="genre"}}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-xs-2">
        <h2>Image URL</h2>
      </div>
      <div class="col-xs-10">
        {{input class="new-game-field" value=image id="image"}}
      </div>
    </div>
  </div>

  <button class="review-button btn" {{action 'saveGame'}}>Add Game</button>
</form>
